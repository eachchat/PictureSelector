<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/picture_item_select_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/first_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignEnd="@id/first_image"
        android:layout_margin="4dp"
        android:background="?attr/picture.folder_checked_dot"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/first_image"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/first_image"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:textColor="@color/picture_color_black"
        android:textSize="16sp"
        tools:text="最近访问" />

    <TextView
        android:id="@+id/tv_images_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/first_image"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/first_image"
        android:textColor="#999"
        android:textSize="12sp"
        tools:text="666" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/first_image"
        android:layout_alignStart="@id/tv_folder_name"
        android:layout_marginTop="12dp"
        android:background="#ddd" />

</RelativeLayout>